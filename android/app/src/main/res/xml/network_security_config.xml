<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for Hugging Face API and other domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api-inference.huggingface.co</domain>
        <domain includeSubdomains="true">huggingface.co</domain>
        <domain includeSubdomains="true">router.huggingface.co</domain>
        <!-- Add other domains if needed -->
    </domain-config>
    
    <!-- Base configuration for other traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>